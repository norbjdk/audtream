<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.audtream.desktop.controller.MusicPlayerController"
      spacing="10"
      style="-fx-background-color: #1a1a1a; -fx-background-radius: 10;"
      prefHeight="150">

    <padding>
        <Insets top="15" right="20" bottom="15" left="20"/>
    </padding>

    <!-- Main Container -->
    <HBox spacing="20" alignment="CENTER_LEFT">

        <!-- Cover Image -->
        <ImageView fx:id="coverImageView"
                   fitWidth="80"
                   fitHeight="80"
                   preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 0, 0);">
        </ImageView>

        <!-- Track Info + Controls -->
        <VBox spacing="8" HBox.hgrow="ALWAYS">

            <!-- Track Info -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox spacing="2" HBox.hgrow="ALWAYS">
                    <Label fx:id="trackTitleLabel"
                           text="No track loaded"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Label fx:id="artistLabel"
                           text="Select a track to play"
                           style="-fx-text-fill: #b3b3b3; -fx-font-size: 12px;"/>
                </VBox>
            </HBox>

            <!-- Progress Bar with Time Labels -->
            <HBox spacing="10" alignment="CENTER">
                <Label fx:id="currentTimeLabel"
                       text="0:00"
                       style="-fx-text-fill: #b3b3b3; -fx-font-size: 11px;"
                       minWidth="40"
                       alignment="CENTER_RIGHT"/>

                <ProgressBar fx:id="progressBar"
                             prefWidth="400"
                             prefHeight="6"
                             style="-fx-accent: #1db954;"
                             HBox.hgrow="ALWAYS"/>

                <Label fx:id="totalTimeLabel"
                       text="0:00"
                       style="-fx-text-fill: #b3b3b3; -fx-font-size: 11px;"
                       minWidth="40"/>
            </HBox>

            <!-- Controls -->
            <HBox spacing="15" alignment="CENTER">

                <!-- Shuffle Button -->
                <Button fx:id="shuffleButton"
                        text="ðŸ”€"
                        style="-fx-background-color: transparent; -fx-text-fill: #b3b3b3; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="35"
                        prefHeight="35"/>

                <!-- Previous Button -->
                <Button fx:id="previousButton"
                        text="â®"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20px; -fx-cursor: hand;"
                        prefWidth="40"
                        prefHeight="40"/>

                <!-- Play/Pause Button -->
                <Button fx:id="playPauseButton"
                        text="â–¶"
                        style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 20px; -fx-background-radius: 50%; -fx-cursor: hand;"
                        prefWidth="50"
                        prefHeight="50"/>

                <!-- Next Button -->
                <Button fx:id="nextButton"
                        text="â­"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 20px; -fx-cursor: hand;"
                        prefWidth="40"
                        prefHeight="40"/>

                <!-- Repeat Button -->
                <Button fx:id="repeatButton"
                        text="ðŸ”"
                        style="-fx-background-color: transparent; -fx-text-fill: #b3b3b3; -fx-font-size: 16px; -fx-cursor: hand;"
                        prefWidth="35"
                        prefHeight="35"/>

                <!-- Spacer -->
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Volume Control -->
                <HBox spacing="10" alignment="CENTER">
                    <Label text="ðŸ”Š"
                           style="-fx-text-fill: #b3b3b3; -fx-font-size: 16px;"/>
                    <Slider fx:id="volumeSlider"
                            min="0"
                            max="100"
                            value="50"
                            prefWidth="100"
                            style="-fx-control-inner-background: #404040;"/>
                </HBox>
            </HBox>
        </VBox>
    </HBox>
</VBox>